{
  "name": "postcss-dynamic-value",
  "version": "0.0.4",
  "description": "PostCSS plugin that implements input actual value selectors",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "postcss-dynamic-value"
  ],
  "scripts": {
    "test": "jest --coverage && eslint ."
  },
  "author": "Mauro Bartolomeoli <maurobartolomeoli@gmail.com>",
  "license": "MIT",
  "repository": "mbarto/postcss-dynamic-value",
  "engines": {
    "node": ">=12.0"
  },
  "peerDependencies": {
    "postcss": "^8.2.14"
  },
  "devDependencies": {
    "@logux/eslint-config": "^48.0.0",
    "clean-publish": "^3.4.2",
    "eslint": "^8.1.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^37.0.1",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "postcss": "^8.3.11",
    "postcss-sharec-config": "^0.5.2",
    "prettier": "^2.2.1",
    "simple-git-hooks": "^2.7.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "testEnvironment": "node"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "clean-publish": {
    "cleanDocs": true
  },
  "sharec": {
    "config": "postcss-sharec-config",
    "version": "0.5.2"
  }
}
